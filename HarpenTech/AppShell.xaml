<?xml version="1.0" encoding="UTF-8" ?><Shell    x:Class="HarpenTech.AppShell"    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    xmlns:views="clr-namespace:HarpenTech.Views"    xmlns:view="clr-namespace:HarpenTech.Views.HomePage"    xmlns:vi="clr-namespace:HarpenTech.Views.RecievePage"    xmlns:repair="clr-namespace:HarpenTech.Views.RepairPage"    xmlns:dispatch="clr-namespace:HarpenTech.Views.Dispatch"    xmlns:setting="clr-namespace:HarpenTech.Views.SettingsPage"    xmlns:blankscreen="clr-namespace:HarpenTech.Views.ExternalScreen"    xmlns:inspectcontainer="clr-namespace:HarpenTech.Views.RecievePage"     Shell.FlyoutBehavior="Flyout"      Shell.TabBarIsVisible="False" >    <Shell.FlyoutHeader>        <VerticalStackLayout>            <Image Source="tracking.png"  WidthRequest="100" ></Image>            <Label Text="CMS" HorizontalTextAlignment="Center" ></Label>        </VerticalStackLayout>    </Shell.FlyoutHeader>    <FlyoutItem Title="Dashboard" FlyoutDisplayOptions="AsMultipleItems" >        <ShellContent      Shell.FlyoutBehavior="Disabled"        Shell.BackgroundColor="#0000ff"ContentTemplate="{DataTemplate blankscreen:BlankPage}" />        <ShellContent             Title="CMSHomePage"            ContentTemplate="{DataTemplate view:CMSHomePage}"           Route="HomePage"             Icon="home.png"            Shell.FlyoutBehavior="Flyout"            Shell.BackgroundColor="#0000ff"            />        <ShellContent              Title="Recieve"             ContentTemplate="{DataTemplate vi:RecieveView }"             Route="Recieve"                Icon="delivery.png"             Shell.FlyoutBehavior="Flyout"            Shell.BackgroundColor="#0000ff"             />        <ShellContent               Title="Dispatch"              ContentTemplate="{DataTemplate dispatch:DispatchView}"              Route="Dispatch"              Icon="dispatch.png"              Shell.FlyoutBehavior="Flyout"                Shell.BackgroundColor="#0000ff"            />        <ShellContent             Title="Repair"            ContentTemplate="{DataTemplate repair:RepairView }"             Route="Repair"               Icon="repair.png"            Shell.FlyoutBehavior="Flyout"            Shell.BackgroundColor="#0000ff"            />        <ShellContent       Title="Settings"      ContentTemplate="{DataTemplate setting:SettingPage2 }"       Route="Settinge2"         Icon="settings.png"      Shell.FlyoutBehavior="Flyout"      Shell.BackgroundColor="#0000ff"      />        <ShellContent     Title="Logout"     ContentTemplate="{DataTemplate views:LoginView}"          Route="login"     Icon="logout.png"     />    </FlyoutItem></Shell>