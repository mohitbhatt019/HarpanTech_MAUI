<?xml version="1.0" encoding="utf-8" ?><views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="HarpenTech.Views.SettingsPage.SettingView"             Shell.FlyoutBehavior="Disabled"             Shell.NavBarIsVisible="True"             Shell.TabBarIsVisible="False"             Shell.BackgroundColor="#0000ff"             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             xmlns:views="clr-namespace:HarpenTech.Views"             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             xmlns:viewmodels="clr-namespace:HarpenTech.ViewModels"             x:DataType="viewmodels:SettingViewModel"             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"             xmlns:mct2="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">

    <!--TitleView-->
    <Shell.TitleView>        <Label TextColor="#FFFFFF" Text="CMS Settings"  VerticalOptions="CenterAndExpand" FontSize="14"   HorizontalOptions="CenterAndExpand"/>    </Shell.TitleView>
    
    <ContentPage.Behaviors>
        <mct2:StatusBarBehavior StatusBarColor="#0000FF" x:Name="statusbar" />
    </ContentPage.Behaviors>    <!--BackBUttonBehaviour-->    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False"  />
    </Shell.BackButtonBehavior>    <ContentPage.Resources>        <ResourceDictionary>            <Style TargetType="Label" x:Key="LabelStyle">                <Setter Property="FontSize" Value="14"/>                <Setter Property="FontFamily" Value="Inter" />            </Style>        </ResourceDictionary>    </ContentPage.Resources>    <Grid   Padding="15"  >        <Grid.RowDefinitions>            <RowDefinition  />            <RowDefinition  />            <RowDefinition/>            <RowDefinition />            <RowDefinition />            <RowDefinition />            <RowDefinition />            <RowDefinition />            <RowDefinition/>            <RowDefinition/>            <RowDefinition/>            <RowDefinition/>            <RowDefinition/>        </Grid.RowDefinitions>        <Grid.ColumnDefinitions >            <ColumnDefinition />            <ColumnDefinition />            <ColumnDefinition />            <ColumnDefinition />            <ColumnDefinition />            <ColumnDefinition />        </Grid.ColumnDefinitions>        <!--UserUrl-->        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6">            <Label IsVisible="false"  x:Name="UserURL" FontSize="10" Text="URL"/>            <Entry Text="{Binding Url}" x:Name="userentry" Placeholder="URL" Focused="UserURLFocus" Unfocused="UserURLUnfocus" HeightRequest="50"/>        </StackLayout>        <!--CompanyName-->        <StackLayout  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6">            <Label IsVisible="false"  x:Name="UserCompanyName" FontSize="10" Text="Company Name"/>            <Entry Text="{Binding CompanyName}"  x:Name="companyentry" Placeholder="Company Name" Focused="UserCompanyNameFocus" Unfocused="UserCompanyNameUnfocus"  HeightRequest="50"/>        </StackLayout>        <!--MainDb-->        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" IsVisible="false" x:Name="UserMainDb" FontSize="10" Text="Main DB"/>        <Entry Grid.Row="2" Grid.ColumnSpan="3"  x:Name="mainentry"  Text="{Binding MainDb}" Placeholder="Main DB"  Focused="UserMainDbFocus" Unfocused="UserMainDbUnfocus"  HeightRequest="50"/>        <!--Depot-->        <Label Grid.Row="2" Grid.Column="3"  IsVisible="false"  x:Name="UserDepot" FontSize="10" Text="Depot"/>        <Entry Grid.Row="2"  Grid.Column="3" Grid.ColumnSpan="3"   x:Name="depotentry" Text="{Binding Depot}" Placeholder="Depot" Focused="UserDepotNameFocus" Unfocused="UserDepotNameUnfocus"  HeightRequest="50"/>        <!--TestConnectionClick-->        <!--<Button Clicked="TestConnectionClick"  ScaleX="1.3" VerticalOptions="Center" ScaleY="1.3" Grid.ColumnSpan="2"  Grid.Row="3" Grid.Column="0" Text="Test Connection" FontSize="12"   HorizontalOptions="Start" BackgroundColor="Transparent" TextColor="#0000ff"/>-->        <!--CancelClick-->        <Button Clicked="CancelClick" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"  WidthRequest="100" Text="Cancel" BackgroundColor="Transparent"  TextColor="#0000ff"  FontSize="Subtitle"/>        <!--SaveButton-->        <!--<Button IsEnabled="False" x:Name="SaveButton" IsVisible="true" BackgroundColor="Gray" Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="1" WidthRequest="100" VerticalOptions="End" HorizontalOptions="End"  Text="Save" FontSize="Subtitle" />-->        <!--SaveButton2-->        <Button IsVisible="true" x:Name="SaveButton2"  Clicked="SaveClick" Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="1" WidthRequest="100" VerticalOptions="End" HorizontalOptions="End"  Text="Save" FontSize="Subtitle" />            <!-- INDICATOR -->            <skia:SKLottieView Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="6"
                   Source="fast.json"
                   RepeatCount="10"
                   IsVisible="{Binding IsBusy}"
                   IsAnimationEnabled="{Binding IsBusy}"
                   WidthRequest="100"
                   HeightRequest="100"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">

            </skia:SKLottieView>           </Grid>
</views:ContentPageBase>