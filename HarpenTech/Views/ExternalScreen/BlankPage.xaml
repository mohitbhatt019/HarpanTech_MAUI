<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarpenTech.Views.ExternalScreen.BlankPage"
             BackgroundColor="White"
                   xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">


    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="White" x:Name="statusbar" />
    </ContentPage.Behaviors>
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="White">
        <Frame CornerRadius="500" BorderColor="Transparent">
            <Image ZIndex="0" VerticalOptions="Center" HorizontalOptions="Center" Source="harpan2.png" WidthRequest="200" HeightRequest="200"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>