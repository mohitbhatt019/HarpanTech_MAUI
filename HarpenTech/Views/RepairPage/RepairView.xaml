<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HarpenTech.Views.RepairPage.RepairView"
             xmlns:vm="clr-namespace:HarpenTech.ViewModels"
             x:DataType="vm:RepairViewModel"
             Shell.FlyoutBehavior="Flyout"
             Title="             Repair View"
              >

    <!--<Shell.TitleView>        <Label TextColor="#FFFFFF" Text="Repair View        "  VerticalOptions="CenterAndExpand" FontSize="14"   HorizontalOptions="CenterAndExpand"/>    </Shell.TitleView>-->

    <ContentPage.ToolbarItems >        <ToolbarItem Text="{OnPlatform Default='&lt;'}" Command="{Binding BackClickCommand}">            <ToolbarItem.IconImageSource>                <FontImageSource Glyph="&lt;" FontFamily="YourFontFamily" Size="200" Color="White"/>            </ToolbarItem.IconImageSource>        </ToolbarItem>    </ContentPage.ToolbarItems>


    <VerticalStackLayout>
        <StackLayout>            <Grid RowDefinitions="50, Auto, *, *"               ColumnDefinitions="250, .30* , .30*"               Padding="5"               ColumnSpacing="10">                <Label  IsVisible="false" x:Name="UserLabel" Margin="14,-5,0,0"              Text="Serch Container no."/>                <SearchBar x:Name="username" Placeholder="serch container no." VerticalOptions="Start" HorizontalOptions="Start" WidthRequest="330" Focused="UserNameLabelFocus" Unfocused="UserNameLabelUnFocus" Margin="-15,0,0,0"  >                </SearchBar>            </Grid>            <Label x:Name="containerErrorLabel" TextColor="Red" IsVisible="False"/>        </StackLayout>        <!--Door-->        <StackLayout>            <Grid RowDefinitions="50, Auto, *,* " ColumnDefinitions="100, 30* , 30*" Padding="5" ColumnSpacing="10">                <Button Command="{Binding RepairEditClickCommand}" Text=""  WidthRequest="50" VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="Transparent" ZIndex="100" Margin="10,0,0,0" />                <Entry Placeholder="Door" VerticalOptions="Start" HorizontalOptions="Start" WidthRequest="50" Margin="10,0,0,0" />                <Entry Placeholder="Damage Remarks"                      WidthRequest="230" Margin="240,0,-50,5"   />                <CheckBox Margin="240,0,-330,5" WidthRequest="20"/>            </Grid>            <Label x:Name="doorErrorLabel" TextColor="Red" IsVisible="False"/>        </StackLayout>        <!--Left-->        <StackLayout>            <Grid RowDefinitions="50, Auto,* ,* " ColumnDefinitions="100, 30* , 30*" Padding="5" ColumnSpacing="10">                <Button Command="{Binding RepairEditClickCommand}" Text=""  WidthRequest="50" VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="Transparent" ZIndex="100" Margin="10,0,50,0" />                <Entry Placeholder="Left" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" WidthRequest="50" Margin="10,0,50,0"/>                <Entry Placeholder="Damage Remarks" WidthRequest="230" Margin="240,0,-50,5"   />                <CheckBox Margin="240,0,-330,5" WidthRequest="20"  />            </Grid>            <Label x:Name="leftErrorLabel" TextColor="Red" IsVisible="False"/>        </StackLayout>        <!--Back-->        <StackLayout>            <Grid RowDefinitions="50, Auto,* ,* " ColumnDefinitions="100, 30* , 30*" Padding="5" ColumnSpacing="10">                <Button Command="{Binding RepairEditClickCommand}" Text=""  WidthRequest="50" VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="Transparent" ZIndex="100" Margin="10,0,50,0" />                <Entry Placeholder="Back" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" WidthRequest="50" Margin="10,0,50,0"/>                <Entry Placeholder="Damage Remarks" WidthRequest="230" Margin="240,0,-50,5"  />                <CheckBox Margin="240,0,-330,5" WidthRequest="20"    />            </Grid>            <Label x:Name="backErrorLabel" TextColor="Red" IsVisible="False"/>        </StackLayout>        <!--Right-->        <StackLayout>            <Grid RowDefinitions="50, Auto,* ,* " ColumnDefinitions="100, 30* , 30*" Padding="5" ColumnSpacing="10">                <Button Command="{Binding RepairEditClickCommand}" Text=""  WidthRequest="50" VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="Transparent" ZIndex="100" Margin="10,0,50,0" />                <Entry Placeholder="Right" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" WidthRequest="50" Margin="10,0,50,0"/>                <Entry Placeholder="Damage Remarks" WidthRequest="230" Margin="240,0,-50,5"  />                <CheckBox Margin="240,0,-330,5" WidthRequest="20"/>            </Grid>            <Label x:Name="rightErrorLabel" TextColor="Red" IsVisible="False"/>        </StackLayout>        <!--Roof-->        <StackLayout>            <Grid RowDefinitions="50, Auto, *, *" ColumnDefinitions="100, 30* , 30*" Padding="5" ColumnSpacing="10">                <Button Command="{Binding RepairEditClickCommand}" Text=""  WidthRequest="50" VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="Transparent" ZIndex="100" Margin="10,0,50,0" />                <Entry Placeholder="Roof" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" WidthRequest="50" Margin="10,0,50,0"/>                <Entry Placeholder="Damage Remarks" WidthRequest="230" Margin="240,0,-50,5"  />                <CheckBox Margin="240,0,-330,5" WidthRequest="20"  />            </Grid>            <Label x:Name="roofErrorLabel" TextColor="Red" IsVisible="False"/>        </StackLayout>        <!--Inside-->        <StackLayout>            <Grid RowDefinitions="50, Auto,* ,* " ColumnDefinitions="100, 30* , 30*" Padding="5" ColumnSpacing="10">                <Button Command="{Binding RepairEditClickCommand}" Text=""  WidthRequest="50" VerticalOptions="Start" HorizontalOptions="Start" BackgroundColor="Transparent" ZIndex="100" Margin="10,0,50,0" />                <Entry Placeholder="Inside" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" WidthRequest="50" Margin="10,0,50,0"/>                <Entry Placeholder="Damage Remarks" WidthRequest="230" Margin="240,0,-50,5" />                <CheckBox Margin="240,0,-330,5" WidthRequest="20" />            </Grid>            <Label x:Name="insideErrorLabel" TextColor="Red" IsVisible="False"/>        </StackLayout>

    </VerticalStackLayout>
</ContentPage>